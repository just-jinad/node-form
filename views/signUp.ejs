    <form action="/signUp" method="post">
        <div class="container mt-5">
            <h5 class="fst-italic">Sign up here to become one of our registered agent</h5>
            <% if (message!="") { %>
                <div   class="text-center alert hidden alert-danger"> <%= message %></div>
            <% } %>
            <input type="text" placeholder="Enter First Name" class="form-control my-3 shadow-lg" name="firstname">
            <input type="text" placeholder="Enter Last Name" class="form-control my-3 shadow-lg" name="lastname">
            <input type="email" placeholder="Enter Email" class="form-control my-3 shadow-lg" name="email">
            <input type="password" placeholder="Enter password" class="form-control my-3" name="password">
            <button class="btn btn-warning text-white" type="submit">Subit form</button>

        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
